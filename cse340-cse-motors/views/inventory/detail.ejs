<section
  class="page-section vehicle-detail-page"
  aria-labelledby="vehicle-detail-heading"
>
  <% if (typeof notice !== "undefined" && notice) { %>
    <p class="notice"><%= notice %></p>
  <% } %>

  <header class="vehicle-detail-page__header">
    <h1 id="vehicle-detail-heading" class="vehicle-detail-page__title">
      <%= title %>
    </h1>
    <p class="vehicle-detail-page__subtitle">
      Detailed specifications and photos for this vehicle.
    </p>
  </header>

  <%- grid %>

    <div class="vehicle-detail-page__actions">
      <a
        href="/test-drive/request/<%= vehicle.inv_id %>"
        class="button button--primary"
      >
        Request Test Drive
      </a>
    </div>

    <p class="vehicle-detail-page__back">
      <a href="/" class="btn-secondary">‚Üê Back to Home</a>
    </p>
  </section>
</section>
