<section class="account-login">
  <header class="account-login__header">
    <h1><%= title || "Login" %></h1>
    <p>Log in to manage your CSE Motors account.</p>
  </header>

  <% if (typeof notice !== "undefined" && notice) { %>
    <p class="notice"><%= notice %></p>
  <% } %>

  <% if (typeof errors !== "undefined" && errors.length) { %>
    <div class="errors">
      <ul>
        <% errors.forEach(function (err) { %>
          <li><%= err.msg %></li>
        <% }); %>
      </ul>
    </div>
  <% } %>

  <form
    action="/account/login"
    method="post"
    class="form form--account-login"
  >
    <div class="form__field">
      <label for="account_email">Email Address</label>
      <span class="hint">Use the email you registered with.</span>
      <input
        type="email"
        id="account_email"
        name="account_email"
        required
        autocomplete="email"
        placeholder="you@example.com"
        value="<%= typeof account_email !== 'undefined' ? account_email : '' %>"
      />
    </div>

    <div class="form__field">
      <label for="account_password">Password</label>
      <span class="hint">
        Minimum 12 characters, with uppercase, lowercase, a number, and a symbol.
      </span>
      <input
        type="password"
        id="account_password"
        name="account_password"
        required
        minlength="12"
        autocomplete="current-password"
      />
    </div>

    <button type="submit" class="button button--primary">
      Login
    </button>
  </form>
</section>
